{
  "manifest_version": 3,
  "name": "Delcom - Comment Moderator",
  "version": "1.1.0",
  "description": "Automatically moderate spam comments on Instagram, TikTok, YouTube, and more",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "contextMenus",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://www.tiktok.com/*",
    "https://www.youtube.com/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "https://delcom.app/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content/instagram.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["content/tiktok.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://127.0.0.1:8000/extension/*",
        "http://localhost:8000/extension/*",
        "https://delcom.app/extension/*"
      ],
      "js": ["content/auth-listener.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles/*", "content/lib/*"],
      "matches": ["https://www.instagram.com/*", "https://www.tiktok.com/*"]
    }
  ]
}
